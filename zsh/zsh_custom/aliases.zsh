# Shortcuts
alias c='clear'
alias h='history'
alias hgrep='history | grep'

# Extend existing commands
alias ls='ls -FG'
alias git=hub # https://github.com/github/hub
alias tree='tree --dirsfirst'

# New commands
alias reload='source ~/.zshrc'
alias nombom='rm -rf node_modules bower_components && npm cache clean && bower cache clean && npm install && bower install'
alias stree='/Applications/SourceTree.app/Contents/Resources/stree'

# Directory jumps
alias dev='cd ~/Developer'

# Used for setting up terminal for the width ember-cli uses
alias ewidth='echo "----------------------------------------------+---------------------"'
alias gr='cd $(git rev-parse --show-toplevel) && echo "$_"'
